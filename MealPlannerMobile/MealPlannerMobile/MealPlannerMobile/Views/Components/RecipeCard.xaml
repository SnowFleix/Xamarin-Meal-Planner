<?xml version="1.0" encoding="UTF-8"?>
<StackLayout    
    x:Class="MealPlannerMobile.RecipeCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <AbsoluteLayout x:Name="ImageCard" Grid.Row="0" Grid.ColumnSpan="2">
            <Image Source="{Binding RecipeImage}" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" />
            <AbsoluteLayout x:Name="ButtonsLayout" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" Margin="0,0,0,0">
                <StackLayout Margin="0,0,0,0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="1,1,1,1">
                    <Button Text="New Recipe" Clicked="NewRecipeClicked" BackgroundColor="DarkRed" />
                </StackLayout>
            </AbsoluteLayout>
        </AbsoluteLayout>
        <Label Text="{Binding RecipeName}" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label Text="{Binding PrepTime}" Grid.Row="2" Grid.Column="1"/>
        <Label Text="{Binding Price}" Grid.Row="2" Grid.Column="1"/>
        <Label Text="{Binding Calories}" Grid.Row="3" Grid.ColumnSpan="2" />
    </Grid>
</StackLayout>